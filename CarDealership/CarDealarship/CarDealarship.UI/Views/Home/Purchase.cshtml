@model CarDealarship.UI.Models.SalesViewModel
@{
    ViewBag.Title = "Purchase";
}

<div class="row">
    <h2 id="SalesResultTitle">Purchase Vehicle</h2>
    <div id="salesSearchDetails">
    </div>
</div>
<div class="row">
    <div class="saleInfo">
        @using (Html.BeginForm())
            {
            @Html.HiddenFor(i => i.VehicleId);
            <div class="col-md-12">
                <h2>Sales Information</h2>
                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">First Name</label>
                            @Html.TextBoxFor(f => f.FirstName, new { @class = "form-control", placeholder = "FirstName" })
                            <span class="text-danger">@Html.ValidationMessageFor(f => f.FirstName)</span>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">Last Name</label>
                            @Html.TextBoxFor(l => l.LastName, new { @class = "form-control", placeholder = "LastName" })
                            <span class="text-danger">@Html.ValidationMessageFor(l => l.LastName)</span>
                        </div>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">Phone</label>
                            @Html.TextBoxFor(p => p.Phone, new { @class = "form-control", placeholder = "Phone" })
                            <span class="text-danger">@Html.ValidationMessageFor(p => p.Phone)</span>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">Email</label>
                            <span class="text-danger">@Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "Email" })</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Street1</label>
                            @Html.TextBoxFor(s => s.Street1, new { @class = "form-control", placeholder = "Street1" })
                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Street1)</span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Street2</label>
                            @Html.TextBoxFor(s => s.Street2, new { @class = "form-control", placeholder = "Street2" })
                        </div>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>City</label>
                            @Html.TextBoxFor(c => c.City, new { @class = "form-control", placeholder = "City" })
                            <span class="text-danger">@Html.ValidationMessageFor(c => c.City)</span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">State</label>
                            @Html.DropDownListFor(p => p.State, Model.StatesItems, "-Choose State-", new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessageFor(p => p.State)</span>
                        </div>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>ZipCode</label>
                            @Html.TextBoxFor(z => z.ZipCode, new { @class = "form-control", Placeholder = "zipcode" })
                            @*<span class="text-danger">@Html.ValidationMessageFor(z => z.ZipCode)</span>*@
                        </div>

                    </div>
                </div>

                <hr />


                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Purchase Price</label>
                            @Html.TextBoxFor(p => p.PurchasePrice, new { @class = "form-control", placeholder = "Price" })
                            <span class="text-danger">@Html.ValidationMessageFor(p => p.PurchasePrice)</span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Purchase Type</label>
                            @Html.DropDownListFor(p => p.PurchaseType, Model.PurchaseTypeItems, "-choose purchaseType-", new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessageFor(p => p.PurchaseType)</span>
                        </div>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <button class="btn btn-primary">Save</button>
                        </div>

                    </div>
                </div>

            </div>
        }
    </div>

</div>




















