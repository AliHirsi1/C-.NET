<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Guild Cars</title>
    
    @Styles.Render("~/Content/css")  
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Car Dealership", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("New Inventory", "SearchVehicle", "Home")</li>
                    <li>@Html.ActionLink("Useed Inventory", "SearchOldVehicle", "Home")</li>
                    <li>@Html.ActionLink("Special", "Specials", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>


                @if(User.Identity.IsAuthenticated)
                {

                   
                   if (User.IsInRole("Admin"))
                   {                       
                    
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                Admin
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Vehicles", "Vehicle", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Add Vehicle", "AddVehicle", "Admin")
                                </li>
                                
                                <li>
                                    @Html.ActionLink("Users", "Users", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Add User", "AddUser", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Change Password ", "ChangePassword", "Manage")
                                </li>
                                <li>
                                    @Html.ActionLink("Make", "Make", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Models", "Modells", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Specials", "Specials", "Admin")
                                </li>
                            </ul>
                        </li>
                  
                    
                   }
                   if (User.IsInRole("Sales"))
                   {
                                        
                        <li>@Html.ActionLink("Sales", "Sales", "Home")</li>

                  
                   }
                }                
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/home.js")
    @Scripts.Render("~/scripts/VehicleSearch.js")
    @Scripts.Render("~/Scripts/OldVehicleSearch.js")
    @Scripts.Render("~/Scripts/SalesSearch.js")
    @Scripts.Render("~/Scripts/AdminVehicleSearch.js")
    @Scripts.Render("~/Scripts/AdminSpecials.js")
    @*@Scripts.Render("~/Scripts/MakeSearch.js")*@
   

    @RenderSection("scripts", required: false)

</body>
</html>
